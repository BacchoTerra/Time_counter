<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/row_open_events_root"
    android:layout_height="wrap_content"
    android:layout_marginVertical="@dimen/margin_16dp"
    android:paddingVertical="@dimen/padding_6dp">


    <TextView
        android:id="@+id/row_open_events_txtEventName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_size_16"
        tools:text="Concluir faculdade"
        style="@style/TextStyleRobotoMedium"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/row_open_events_txtRemainingTime"
        style="@style/TextStyleRobotoBold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_16dp"
        android:textSize="@dimen/text_size_24"
        app:layout_constraintStart_toStartOf="@+id/row_open_events_txtEventName"
        app:layout_constraintTop_toBottomOf="@+id/row_open_events_txtEventName"
        android:text="145:34:23:12" />

    <TextView
        android:id="@+id/row_open_events_txtDefinedDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/row_open_events_txtRemainingTime"
        app:layout_constraintTop_toBottomOf="@+id/row_open_events_txtRemainingTime"
        tools:text="Definido para 22/12/2021" />

    <TextView
        android:id="@+id/row_open_events_txtDetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/label_details"
        style="@style/TextStyleRobotoLight"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_1dp"
        app:layout_constraintTop_toBottomOf="@id/row_open_events_txtDefinedDate"
        android:layout_marginTop="@dimen/margin_8dp"
        android:background="@color/surfaceColor"
        android:layout_marginHorizontal="@dimen/margin_16dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>
