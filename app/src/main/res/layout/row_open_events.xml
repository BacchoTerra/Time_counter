<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/row_open_events_root"
    android:layout_marginVertical="@dimen/margin_12dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/row_open_events_imageAlarm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:tint="@color/primaryColor"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_baseline_access_alarm_24" />

    <TextView
        android:id="@+id/row_open_events_txtRemainingTime"
        style="@style/TextStyleRobotoBold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:textColor="@color/onBackground"
        tools:text="145:34:23:12"
        android:textSize="@dimen/text_size_20"
        app:layout_constraintBottom_toBottomOf="@+id/row_open_events_imageAlarm"
        app:layout_constraintStart_toEndOf="@+id/row_open_events_imageAlarm"
        app:layout_constraintTop_toTopOf="@+id/row_open_events_imageAlarm" />

    <TextView
        android:id="@+id/row_finished_events_txtDefinedDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textColor="@color/onBackground"
        app:layout_constraintStart_toStartOf="@+id/row_open_events_txtRemainingTime"
        app:layout_constraintTop_toBottomOf="@+id/row_open_events_txtRemainingTime"
        tools:text="Definido para 22/12/2021" />

    <TextView
        android:id="@+id/row_finished_events_txtEventName"
        style="@style/TextStyleRobotoMedium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textSize="@dimen/text_size_16"
        app:layout_constraintStart_toStartOf="@+id/row_finished_events_txtDefinedDate"
        app:layout_constraintTop_toBottomOf="@+id/row_finished_events_txtDefinedDate"
        tools:text="Concluir faculdade" />

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/row_open_events_switchAlarm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding_8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/row_finished_events_txtEventName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/row_open_events_txtRemainingTime" />


</androidx.constraintlayout.widget.ConstraintLayout>


