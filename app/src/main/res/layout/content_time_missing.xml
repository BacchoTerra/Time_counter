<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_time_missing"
    android:paddingHorizontal="@dimen/padding_6dp"
    android:paddingVertical="@dimen/padding_8dp">

    <TextView
        android:id="@+id/content_time_missing_txtNumber"
        style="@style/TextStyleRobotoMedium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="12"
        android:textSize="@dimen/text_size_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/content_time_missing_txtPeriod"
        style="@style/TextStyleRobotoRegular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:textSize="@dimen/text_size_16"
        app:layout_constraintBottom_toBottomOf="@+id/content_time_missing_txtNumber"
        app:layout_constraintStart_toEndOf="@+id/content_time_missing_txtNumber"
        tools:text="Meses no total" />
</androidx.constraintlayout.widget.ConstraintLayout>