<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="@dimen/margin_8dp"
    android:background="@color/surfaceColor"
    android:paddingVertical="@dimen/padding_6dp">

    <TextView
        android:id="@+id/row_events_txtEventName"
        style="@style/TextStyleRobotoRegular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Concluir faculdade" />

    <TextView
        android:id="@+id/row_events_txtDefinedDate"
        style="@style/TextStyleRobotoLight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="@+id/row_events_txtEventName"
        app:layout_constraintTop_toBottomOf="@+id/row_events_txtEventName"
        tools:text="Definido para 22/12/2021" />

    <TextView
        android:id="@+id/row_events_txtRemainingTime"
        style="@style/TextStyleRobotoLight"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:paddingEnd="@dimen/padding_2dp"
        android:textSize="@dimen/text_size_20"
        app:layout_constraintBottom_toBottomOf="@+id/row_events_txtDefinedDate"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/row_events_txtDefinedDate"
        app:layout_constraintTop_toTopOf="@+id/row_events_txtEventName"
        app:layout_constraintVertical_bias="0.542"
        tools:ignore="RtlSymmetry"
        tools:text="145:34:23:12" />
</androidx.constraintlayout.widget.ConstraintLayout>