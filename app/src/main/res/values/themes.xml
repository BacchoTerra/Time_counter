<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TimeCounter" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorOnPrimary">@color/onPrimary</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/primaryColor</item>
        <!-- Customize your theme here. -->
        <item name="android:homeAsUpIndicator">@drawable/ic_baseline_arrow_back_ios_24</item>
        <item name="colorControlActivated">@color/primaryColor</item>
    </style>

    <style name="TextStyleRobotoMedium">

        <item name="fontFamily">@font/roboto_medium</item>
        <item name="android:textColor">@color/onBackground</item>

    </style>

    <style name="TextStyleRobotoBold">

        <item name="fontFamily">@font/roboto_medium</item>
        <item name="android:textColor">@color/onBackground</item>
        <item name="android:textStyle">bold</item>

    </style>

    <style name="TextStyleRobotoLight">

        <item name="fontFamily">@font/roboto_light</item>
        <item name="android:textColor">@color/onBackground</item>

    </style>

    <style name="FancyToolbarTitle" parent="TextStyleRobotoLight">

        <item name="android:textSize">@dimen/text_size_20</item>

    </style>

    <style name="TextStyleRobotoRegular">

        <item name="fontFamily">@font/roboto</item>
        <item name="android:textColor">@color/onBackground</item>

    </style>

</resources>